<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <title><%= product.ProductName %></title>
</head>
<body>
  <!-- Navbar -->
  <%- include('partials/navbar', { user: user }) %>

  <div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2><%= product.ProductName %></h2>
      <div>
        <% if (user) { %>
          <a href="/my-orders" class="btn btn-outline-success">My Orders</a>
        <% } %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        <% if (product.image) { %>
          <img src="/images/<%= product.image %>" class="img-fluid" alt="<%= product.ProductName %>">
        <% } else { %>
          <img src="/images/placeholder.png" class="img-fluid" alt="No image">
        <% } %>
      </div>
      <div class="col-md-6">
        <h3>$<%= Number(product.price).toFixed(2) %></h3>
        <p>Available: <%= product.quantity %></p>
        
        <% if (user && user.role !== 'admin') { %>
          <form method="POST" action="/add-to-cart/<%= product.id %>">
            <input type="number" name="quantity" value="1" min="1" class="form-control mb-2" />
            <button class="btn btn-primary">Add to cart</button>
          </form>
        <% } %>

        <% if (user && user.role === 'admin') { %>
          <div class="mt-2">
            <a href="/updateProduct/<%= product.id %>" class="btn btn-outline-primary">Edit Product</a>
            <a href="/deleteProduct/<%= product.id %>" class="btn btn-outline-danger" onclick="return confirm('Are you sure you want to delete this product?')">Delete Product</a>
          </div>
        <% } %>
      </div>
    </div>

    <a href="/shopping" class="btn btn-secondary mt-3">Back to shopping</a>
  </div>
</body>
</html>
