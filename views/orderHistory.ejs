<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Order History</title>
</head>
<body>
  <!-- Navbar -->
  <%- include('partials/navbar', { user: user }) %>

  <!-- Main content -->
  <div class="container my-4">
    <h2>Order History</h2>

    <% if (messages && messages.error) { %>
      <div class="alert alert-danger"><%= messages.error.join('<br>') %></div>
    <% } %>
    <% if (messages && messages.success) { %>
      <div class="alert alert-success"><%= messages.success.join('<br>') %></div>
    <% } %>

    <% if (!orders || orders.length === 0) { %>
      <div class="alert alert-info">No past orders found.</div>
    <% } else { %>
      <% orders.forEach(function(o) { %>
        <div class="card mb-3">
          <div class="card-header d-flex justify-content-between align-items-center">
            <div>
              <strong>Order #<%= o.id %></strong> &nbsp;
              <span class="text-monospace">Ref: <%= o.reference || 'â€”' %></span>
            </div>
            <div>Placed: <%= o.created_at %></div>
          </div>
          <div class="card-body">
            <p>Status: <strong><%= o.status %></strong> &nbsp; | &nbsp; Total: $<%= Number(o.total || 0).toFixed(2) %></p>

            <% if (o.items && o.items.length) { %>
              <div class="table-responsive">
                <table class="table table-sm">
                  <thead>
                    <tr>
                      <th>Product</th>
                      <th>Qty</th>
                      <th>Price</th>
                      <th>Subtotal</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% o.items.forEach(function(it) { %>
                      <tr>
                        <td><%= it.ProductName || ('Product ' + it.product_id) %></td>
                        <td><%= it.quantity %></td>
                        <td>$<%= Number(it.price).toFixed(2) %></td>
                        <td>$<%= (Number(it.price) * Number(it.quantity)).toFixed(2) %></td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <div class="text-muted">No items recorded for this order.</div>
            <% } %>

            <a href="/orders/<%= o.id %>" class="btn btn-primary btn-sm mt-2">View Order Details</a>
            <a href="/orders/<%= o.id %>/invoice" class="btn btn-success btn-sm mt-2">Download Invoice</a>
          </div>
        </div>
      <% }) %>
    <% } %>

    <a href="/" class="btn btn-secondary mt-3">Back</a>
  </div>
</body>
</html>
