<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <title>Users - Supermarket App</title>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2>Users</h2>
      <% if (user && user.role === 'admin') { %>
        <a href="/users/add" class="btn btn-primary">Add User</a>
      <% } %>
    </div>

    <% if (messages && messages.error) { %>
      <div class="alert alert-danger"><%= messages.error.join('<br>') %></div>
    <% } %>
    <% if (messages && messages.success) { %>
      <div class="alert alert-success"><%= messages.success.join('<br>') %></div>
    <% } %>

    <% if (!users || users.length === 0) { %>
      <div class="alert alert-info">No users found.</div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-striped align-middle">
          <thead>
            <tr>
              <th>ID</th>
              <th>Username</th>
              <th>Email</th>
              <th>Role</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(function(u) { %>
              <tr>
                <td><%= u.id %></td>
                <td><%= u.username %></td>
                <td><%= u.email %></td>
                <td><%= u.role %></td>
                <td class="text-end">
                  <a href="/users/<%= u.id %>" class="btn btn-sm btn-outline-primary">Edit</a>
                  <a href="/users/delete/<%= u.id %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete user?')">Delete</a>
                  <a href="/users/<%= u.id %>/orders" class="btn btn-sm btn-outline-success">View Orders</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>

    <a href="/" class="btn btn-secondary mt-3">Back to Home</a>
  </div>
</body>
</html>
