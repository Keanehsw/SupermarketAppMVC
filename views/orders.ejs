<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Orders</title>
</head>
<body>
  <!-- Navbar -->
  <%- include('partials/navbar', { user: user }) %>

  <!-- Main content -->
  <div class="container my-4">
    <h2>Orders</h2>

    <% if (messages && messages.error) { %>
      <div class="alert alert-danger"><%= messages.error.join('<br>') %></div>
    <% } %>
    <% if (messages && messages.success) { %>
      <div class="alert alert-success"><%= messages.success.join('<br>') %></div>
    <% } %>

    <% if (!orders || orders.length === 0) { %>
      <div class="alert alert-info">No orders found.</div>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
          <thead>
            <tr>
              <th>Order #</th>
              <th>Reference</th>
              <th>User</th>
              <th>Total</th>
              <th>Status</th>
              <th>Placed</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(function(o) { %>
              <tr>
                <td><%= o.id %></td>
                <td class="text-monospace"><%= o.reference || 'â€”' %></td>
                <td><%= o.user_id %></td>
                <td>$<%= Number(o.total || 0).toFixed(2) %></td>
                <td><%= o.status %></td>
                <td><%= o.created_at %></td>
                <td class="text-end">
                  <a href="/orders/<%= o.id %>" class="btn btn-sm btn-outline-primary">View</a>
                  <a href="/orders/<%= o.id %>" class="btn btn-sm btn-outline-primary">View</a>
                  <a href="/orders/<%= o.id %>/invoice" class="btn btn-sm btn-success">Download Invoice</a>
                  <% if (user && user.role === 'admin') { %>
                  <a href="/orders/delete/<%= o.id %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('Delete order and restore stock?')">Delete</a>
                  <% } %>

                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>

    <a href="/" class="btn btn-secondary mt-3">Back to home</a>
  </div>
</body>
</html>
