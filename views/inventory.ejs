<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Inventory - Supermarket App</title>
</head>
<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="nav">
        <ul class="navbar-nav ms-auto">
          <% if (user && user.role === 'admin') { %>
            <li class="nav-item"><a class="nav-link" href="/addProduct">Add Product</a></li>
          <% } %>
          <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
      <h2 class="mb-0">Products</h2>
      <div>
        <small class="text-muted">Signed in as <strong><%= user ? user.username : 'Guest' %></strong> (<%= user ? user.role : 'guest' %>)</small>
      </div>
    </div>

    <% if (!products || products.length === 0) { %>
      <div class="alert alert-info">No products found.</div>
    <% } else { %>
      <div class="row g-3">
        <% products.forEach(function(p) {
             const priceNum = Number(p.price) || 0;
             const img = p.image ? ('/images/' + p.image) : '/images/placeholder.png';
        %>
          <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card h-100 shadow-sm">
              <img src="<%= img %>" class="card-img-top" alt="<%= p.ProductName %>" style="object-fit:cover; height:160px;">
              <div class="card-body d-flex flex-column">
                <!-- remove "stretched-link" so buttons are clickable -->
                <h5 class="card-title">
                  <a href="/product/<%= p.id %>" class="text-decoration-none text-dark"><%= p.ProductName || '—' %></a>
                </h5>
                <p class="card-text mb-1"><small class="text-muted">Qty: <%= p.quantity != null ? p.quantity : '—' %></small></p>
                <p class="card-text fw-bold mb-3">$<%= priceNum.toFixed(2) %></p>

                <div class="mt-auto">
                  <% if (user && user.role === 'admin') { %>
                    <div class="d-flex justify-content-between">
                      <a href="/updateProduct/<%= p.id %>" class="btn btn-sm btn-outline-primary">Edit</a>
                      <a href="/deleteProduct/<%= p.id %>" class="btn btn-sm btn-outline-danger"
                         onclick="return confirm('Are you sure you want to delete this product?')">Delete</a>
                    </div>
                  <% } else { %>
                    <form action="/add-to-cart/<%= p.id %>" method="POST" class="d-flex gap-2">
                      <input type="number" name="quantity" min="1" value="1" class="form-control form-control-sm" style="width:80px;">
                      <button type="submit" class="btn btn-sm btn-success">Add to Cart</button>
                    </form>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>
</body>
</html>